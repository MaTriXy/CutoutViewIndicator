<resources>
    <!-- Naming is analogous to the popular CircleIndicator library -->
    <declare-styleable name="CutoutViewIndicator">

        <!-- drawable to display in foreground, moving from cell to cell -->
        <attr name="rcv_drawable" format="reference" />
        <!-- drawable to display as the background of each view -->
        <attr name="rcv_drawable_unselected" format="reference" />

        <!-- height of each individual cell -->
        <attr name="rcv_height" format="dimension" />
        <!-- width of each individual cell -->
        <attr name="rcv_width" format="dimension" />

        <!-- class name of a preferred CutoutCellGenerator (defaults to ImageCellGenerator) -->
        <attr name="rcv_generator_class_name" format="string" />

        <!-- optional text mask for any TextClippedImageViews instantiated by the generator -->
        <attr name="rcv_generator_text_mask" format="string" />

        <!-- space between successive cells -->
        <attr name="rcv_internal_margin" format="dimension" />

        <!-- design-time-only attribute for previewing what a given number of views would look like -->
        <attr name="rcv_tools_indicator_count" format="integer" />
    </declare-styleable>
    <declare-styleable name="CutoutViewIndicator_Layout">
        <!-- drawable to display in foreground, moving from cell to cell -->
        <attr name="layout_rcv_drawable" format="reference" />
        <!-- drawable to display as the background of each view -->
        <attr name="layout_rcv_drawable_unselected" format="reference" />

        <!-- length of each individual cell (in direction of CVI) -->
        <attr name="layout_rcv_cell_length" format="dimension" />
        <!-- transverse length of each individual cell (perpendicular to direction of CVI) -->
        <attr name="layout_rcv_perpendicular_length" format="dimension" />
    </declare-styleable>
</resources>